<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.emalerta.emalerta">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/emalerta_icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".View.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.EmergenciaActivity"
            android:label="@string/title_activity_emergencia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.EstacaoActivity"
            android:label="@string/title_activity_estacoes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.DetalheEstacaoActivity"
            android:label="@string/title_activity_detalhe_estacao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.NivelActivity"
            android:label="@string/title_activity_nivel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ChuvaActivity"
            android:label="@string/title_activity_chuva"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.GraficoActivity"
            android:label="@string/title_activity_grafico"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.RegisterActivity"
            android:label="@string/title_activity_criar_conta"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>