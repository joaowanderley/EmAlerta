<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCodEstacao"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNome"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/tvRio"
        android:layout_alignStart="@+id/tvRio"
        android:layout_below="@+id/tvRio"
        android:autoLink="web"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMunicipio"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imgEstacaoFavorita"
        android:layout_toRightOf="@+id/imgEstacaoFavorita"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRio"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/tvMunicipio"
        android:layout_alignStart="@+id/tvMunicipio"
        android:layout_below="@+id/tvMunicipio"
        android:autoLink="phone"/>

    <ImageView
        android:id="@+id/imgEstacaoFavorita"
        android:layout_width="200px"
        android:layout_height="130px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/rio_largo" />

</RelativeLayout>