<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nivel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgSituacaoListNivel"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/subindo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/txtNivelListNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="168"
        android:layout_marginStart="34dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDataListNivel"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/imgSituacaoListNivel"
        android:layout_marginLeft="34dp" />

    <TextView
        android:id="@+id/txtDataListNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24/08/2017 01:15"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtNivelListNivel"
        android:layout_marginLeft="27dp" />

    <TextView
        android:id="@+id/txtSituacaoListNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:text="Normal"
        app:layout_constraintBottom_toBottomOf="@+id/txtDataListNivel"
        app:layout_constraintLeft_toRightOf="@+id/txtDataListNivel"
        app:layout_constraintTop_toTopOf="@+id/txtDataListNivel"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
